@model IEnumerable<WMMCRCNational.Models.Ride>
@{
    Layout = null;
}

@using PagedList.Mvc;
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ExportRides</title>
</head>
<body>
    <div>
        <table>
            <tr>
                <th>
                    Member
                </th>
                <th>
                    Ride From
                </th>
                <th>
                    Ride To
                </th>
                <th>
                    Miles
                </th>
                <th>
                    Ride Date
                </th>
                <th>
                    Ride Notes
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RideFromName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RideToName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Miles)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RideDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RideNotes)
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
</html>